<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Define Persistence Unit for Habit Tracker -->
    <persistence-unit name="my_persistence_unit" transaction-type="JTA">
        <!-- Entity classes -->
        <class>com.checkmate.Habit</class>
        <class>com.checkmate.HabitLog</class>
        
        <!-- Properties for GlassFish with H2 database -->
        <properties>
            <!-- Automatic schema generation -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="none"/>
            
            <!-- Logging queries (optional - for debugging) -->
            <property name="eclipse.persistence.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
